<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.net.bhe.shardingjspringboot.mapper.ShardingjMapper">
    <!-- TODO -->
    <resultMap id="orderResultMap" type="cn.net.bhe.shardingjspringboot.entity.Order">
        <result property="id" column="id"/>
        <result property="orderDate" column="order_date"/>
        <collection property="orderLiList" ofType="cn.net.bhe.shardingjspringboot.entity.OrderLi" columnPrefix="li_">
            <result property="id" column="id"/>
            <result property="orderId" column="order_id"/>
            <result property="goodsId" column="goods_id"/>
            <result property="quantity" column="quantity"/>
        </collection>
    </resultMap>

    <insert id="insertOrder">
        insert into sds_order (id, order_date)
        values (#{id}, #{orderDate})
    </insert>

    <insert id="insertOrderLi">
        insert into sds_order_li (id, order_id, goods_id, quantity)
        values (#{id}, #{orderId}, #{goodsId}, #{quantity})
    </insert>

    <select id="selectOrderList" resultMap="orderResultMap">
        select t.id, t.order_date, t2.id li_id,
        t2.order_id li_order_id, t2.goods_id li_goods_id, t2.quantity li_quantity
        from sds_order t
        left join sds_order_li t2 on t.id = t2.order_id
        <where>
            <if test="id != null">
                and t.id = #{id}
            </if>
        </where>
        order by t.id
    </select>

    <update id="updateOrder">
        update sds_order
        <trim prefix="set" suffixOverrides=",">
            <if test="orderDate != null">order_date = #{orderDate},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOrder">
        delete
        from sds_order
        where id = #{id}
    </delete>

    <delete id="deleteOrderLiByOrderId">
        delete
        from sds_order_li
        where order_id = #{orderId}
    </delete>

</mapper>