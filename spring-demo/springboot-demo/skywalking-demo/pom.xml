    <name>skywalking-demo</name>
    <url>http://maven.apache.org</url>

    <properties>
        <mysql-connector-j.version>8.2.0</mysql-connector-j.version>
        <apm-toolkit-trace.version>9.0.0</apm-toolkit-trace.version>
